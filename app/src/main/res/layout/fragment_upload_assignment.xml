<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.UploadAssignmentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutAssignmentDetails"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/jims_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/goBackUploadAssignmentFragment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/go_back"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subjectNameUploadAssignmentFragment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/goBackUploadAssignmentFragment"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/assignmentDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Assignment Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="left|center"
        android:layout_marginLeft="10dp"
        android:padding="3dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutAssignmentDetails" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/assignLinkAssignmentFragment"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/notes_subject"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:text="View Assignment"
        android:textColor="#000"
        android:textSize="17sp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assignmentDetailsTextView" />

    <TextView
        android:id="@+id/tv1AssignmentFragment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:padding="3dp"
        android:text="Assignment Name:"
        android:textColor="#434343"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assignLinkAssignmentFragment" />

    <TextView
        android:id="@+id/assignNameAssignmentFragment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:gravity="right|center"
        android:maxLength="30"
        android:padding="3dp"
        android:textColor="#434343"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv1AssignmentFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv1AssignmentFragment"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv2AssignmentFragment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:gravity="left|center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:padding="3dp"
        android:text="Assignment Status:"
        android:textColor="#434343"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1AssignmentFragment" />

    <TextView
        android:id="@+id/assignStatusAssignmentFragment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:gravity="right|center"
        android:maxLength="30"
        android:padding="3dp"
        android:textColor="#434343"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv2AssignmentFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv2AssignmentFragment"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv3AssignmentFragment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:gravity="left|center"
        android:layout_marginLeft="10dp"
        android:padding="3dp"
        android:text="Uploaded On:"
        android:textColor="#434343"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2AssignmentFragment" />

    <TextView
        android:id="@+id/assignUploadDateAssignmentFragment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="right|center"
        android:maxLength="20"
        android:padding="3dp"
        android:layout_marginRight="10dp"
        android:textColor="#434343"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv3AssignmentFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv3AssignmentFragment"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv4AssignmentFragment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:gravity="left|center"
        android:layout_marginLeft="10dp"
        android:padding="3dp"
        android:text="Due Date:"
        android:textColor="#434343"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv3AssignmentFragment" />

    <TextView
        android:id="@+id/assignDueDateAssignmentFragment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="right|center"
        android:maxLength="20"
        android:padding="3dp"
        android:layout_marginRight="10dp"
        android:textColor="#434343"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv4AssignmentFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv4AssignmentFragment"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/uploadAssignment"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/jims_color"
        android:textColor="#fff"
        android:text="Upload Assignment"
        android:textSize="18sp"
        android:drawableLeft="@drawable/upload_assig"
        android:drawablePadding="10dp"
        android:textAllCaps="false"
        app:cornerRadius="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assignDueDateAssignmentFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>