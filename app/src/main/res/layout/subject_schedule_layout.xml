<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    android:background="#F1EDED">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1EDED">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/subjectNameSchedule"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view100"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:background="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subjectNameSchedule" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/scheduleFrom"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/cls_start_icon"
            android:text="From: "
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view100" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/subjectTimeSchedule"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="left|center"
            android:paddingLeft="4dp"
            android:text="9:00 AM"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/scheduleFrom"
            app:layout_constraintTop_toBottomOf="@+id/view100" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/subjectLinkSchedule"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:drawablePadding="15dp"
            android:text="open zoom app"
            android:drawableLeft="@drawable/video_icon"
            android:textAllCaps="true"
            android:textColor="@color/jims_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subjectTimeSchedule" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/subjectReminderSchedule"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/reminder_icon"
            android:drawablePadding="15dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="Set Reminder"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subjectLinkSchedule" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/shareLinkSchedule"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/share_icon"
            android:drawablePadding="15dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="Share Link"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subjectReminderSchedule" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>